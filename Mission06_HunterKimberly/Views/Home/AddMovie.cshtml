@model Movie

@{
    ViewData["Title"] = "Add a Movie to Joel Hilton's Film Collection";
}

<div class="text-center">
    <h1 class="display-4">Add a Movie to Joel Hilton's Film Collection</h1>
</div>
<form method="post">
    <label asp-for="Category">Category</label>
    <select asp-for="Category">
        <option value="Action_Adventure">Action & Adventure</option>
        <option value="Comedy">Comedy</option>
        <option value="Drama">Drama</option>
        <option value="Family">Family</option>
        <option value="Horror_Suspense">Horror & Suspense</option>
        <option value="Miscellaneous">Miscellaneous</option>
        <option value="Television">Television</option>
        <option value="VHS">VHS</option>
    </select>
    <br />
    <label asp-for="Title">Title</label>
    <input asp-for="Title" />
    <br />
    <label asp-for="Year">Year</label>
    <input asp-for="Year" type="number" min="1888" max="4000" pattern="[0-9]{4}" value="2015" maxlength="4" />
    <br />
    <label asp-for="Director">Director</label>
    <input asp-for="Director" />
    <br />
    <label asp-for="Rating">Rating</label>
    <select asp-for="Rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <br />
    <label asp-for="Edited">Edited</label>
    <select asp-for="Edited">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br />
    <label asp-for="Lent_To">Lent To</label>
    <input asp-for="Lent_To" />
    <br />
    <label asp-for="Notes">Notes</label>
    <input asp-for="Notes" maxlength="25"/>
    <br />
    <button type="submit">Add New Movie</button>
</form>
